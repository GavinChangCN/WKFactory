<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>

<session-factory>
	<!--配置SQLServer连接属性-->
	<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
	<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
	<property name="connection.url">jdbc:mysql://localhost:3306/cloudcourse</property>
	<property name="connection.username">root</property>
	<property name="connection.password">12345</property>
	<!-- 是否显示sql   -->
  	<property name="show_sql">true</property>
 	<!-- 是否格式化sql -->
  	<property name="format_sql">true</property>
  	<!-- 是否使用注释  -->
  	<property name="use_sql_comments">true</property>
	<!--根据需要自动生成、更新数据表-->
	<property name="hbm2ddl.auto">update</property>
	<property name="myeclipse.connection.profile">WKFactory</property>
	<property name="current_session_context_class">thread</property>

	<!-- 数据库实体对应 -->
	<mapping class="WKFactory.Entity.AccessoryEntity"></mapping>
	<mapping class="WKFactory.Entity.AttendCourseEntity"></mapping>
	<mapping class="WKFactory.Entity.AudienceRecorderEntity"></mapping>
	<mapping class="WKFactory.Entity.ChapterEntity"></mapping>
	<mapping class="WKFactory.Entity.CommentEntity"></mapping>
	<mapping class="WKFactory.Entity.CourseEntity"></mapping>
	<mapping class="WKFactory.Entity.DownloadRecorderEntity"></mapping>
	<mapping class="WKFactory.Entity.SubjectEntity"></mapping>
	<mapping class="WKFactory.Entity.PollVoteEntity"></mapping>
	<mapping class="WKFactory.Entity.UserEntity"></mapping>
	<mapping class="WKFactory.Entity.IndexSubjectEntity"></mapping>
	
</session-factory>

</hibernate-configuration>